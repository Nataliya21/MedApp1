<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/End"
        android:layout_width="wrap_content"
        android:layout_height="167dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:text='   Поздравляем! Вы успешно прошли тестирование! Отправьте результаты вашей проверки на сервер, для того чтобы врач ознакомился с ними. Для этого нажмите кнопку "Отправить результаты".'
        android:textColor="@android:color/widget_edittext_dark"
        android:textSize="18sp"
        android:textStyle="italic"
        android:typeface="normal" />

    <Button
        android:id="@+id/Send"
        android:layout_width="152dp"
        android:layout_height="51dp"
        android:layout_below="@+id/date"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorAccent"
        android:text="Отправить результаты"
        android:textSize="18sp" />

    <Button
        android:id="@+id/EndB"
        android:layout_width="133dp"
        android:layout_height="54dp"
        android:layout_below="@+id/date"
        android:layout_alignStart="@+id/Send"
        android:layout_alignLeft="@+id/Send"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="196dp"
        android:layout_marginLeft="196dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorAccent"
        android:text="Не отпралять"
        android:textSize="18sp"
        android:typeface="normal" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_below="@+id/End"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp" />

    <Button
        android:id="@+id/date"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="186dp"
        android:layout_marginRight="186dp"
        android:background="@color/colorAccent"
        android:text="Установить дату"
        android:textSize="18sp"
        android:typeface="normal" />

</RelativeLayout>